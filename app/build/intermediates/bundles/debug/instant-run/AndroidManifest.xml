<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.tue.student.thermostat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.tue.student.thermostat.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.tue.student.thermostat.TestingWS"
            android:label="@string/app_name" />
        <activity
            android:name="nl.tue.student.thermostat.Settings"
            android:label="Settings"
            android:theme="@style/AppTheme" />
        <activity
            android:name="nl.tue.student.thermostat.Day"
            android:label="Day" />
        <activity
            android:name="nl.tue.student.thermostat.Faq"
            android:label="FAQ" />
        <activity
            android:name="nl.tue.student.thermostat.About"
            android:label="About" />
        <activity
            android:name="nl.tue.student.thermostat.Help"
            android:label="Help" />
    </application>

</manifest>